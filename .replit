run = "uv run python main.py"
entrypoint = "main.py"
modules = ["postgresql-16", "python-3.11"]

[nix]
channel = "unstable"
packages = ["cairo", "ffmpeg-full", "freetype", "ghostscript", "glibcLocales", "gobject-introspection", "gtk3", "lcms2", "libGL", "libGLU", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "openjpeg", "pkg-config", "qhull", "tcl", "tk", "xsimd", "zlib"]

[[ports]]
localPort = 5000
externalPort = 80

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Streamlit Server"

[[workflows.workflow]]
name = "Streamlit Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run app.py --server.port=5000 --server.address=0.0.0.0 --server.headless=true --browser.gatherUsageStats=false"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "uv sync && uv run streamlit run app.py --server.port=5000 --server.address=0.0.0.0 --server.headless=true --browser.gatherUsageStats=false"]
deploymentTarget = "cloudrun"
