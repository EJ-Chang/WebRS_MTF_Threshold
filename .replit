modules = ["python-3.13", "python-base-3.13"]

[nix]
channel = "stable-24_05"
packages = [
    "cairo",
    "ffmpeg-full",
    "freetype",
    "ghostscript",
    "glibcLocales",
    "gobject-introspection",
    "gtk3",
    "lcms2",
    "libGL",
    "libGLU",
    "libimagequant",
    "libjpeg",
    "libtiff",
    "libwebp",
    "libxcrypt",
    "mesa",
    "openjpeg",
    "pkg-config",
    "qhull",
    "tcl",
    "tk",
    "xorg.libX11",
    "xorg.libXext",
    "xsimd",
    "zlib",
    "gcc",
    "stdenv.cc.cc.lib",
    "glibc",
    "streamlit",
]

[env]
LD_LIBRARY_PATH = "${NIX_LD_LIBRARY_PATH}"
PYTHONPATH = "${REPL_HOME}/.pythonlibs/lib/python3.13/site-packages"
PYTHONDONTWRITEBYTECODE = "1"
NUMPY_EXPERIMENTAL_ARRAY_FUNCTION = "0"

[deployment]
deploymentTarget = "autoscale"
run = ["streamlit", "run", "app.py", "--server.port", "5000"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Streamlit Server"

[[workflows.workflow]]
name = "Streamlit Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run app.py --server.port 5000"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80
